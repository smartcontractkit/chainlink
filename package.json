    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4",
    "wsrun": "^5.2.0"
  },
  "resolutions": {
