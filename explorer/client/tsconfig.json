{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react"
  },

  "include": ["src", "@types", "test"],

  "references": [
    { "path": "../../tools/json-api-client" },
    { "path": "../../tools/redux" },
    { "path": "../../tools/ts-test-helpers" }
  ]
}
