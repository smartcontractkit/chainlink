{
  "name": "@chainlink/explorer",
  "private": true,
  "version": "0.0.1",
  "description": "LINK Explorer",
  "author": "Chainlink Dev Team",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "admin:seed": "ts-node src/bin/admin.ts seed",
    "admin:clnodes:add": "ts-node src/bin/clnodes.ts add",
    "admin:clnodes:delete": "ts-node src/bin/clnodes.ts delete",
    "depcheck": "echo \"@chainlink/explorer\" && depcheck --ignore-dirs=client || exit 0",
    "predev": "yarn automigrate",
    "dev": "concurrently \"cd client && yarn start\" \"ts-node-dev --respawn --transpileOnly ./src/index.ts\"",
    "dev:client": "yarn workspace @chainlink/explorer-client run start",
    "dev:server": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "dev:compose": "COMPOSE_MODE=TRUE yarn migration:run && ts-node ./src/index.ts",
    "build": "yarn workspace @chainlink/explorer-client run build",
    "prod": "yarn migration:run && ts-node ./src/index.ts",
    "pretest": "NODE_ENV=test yarn automigrate",
    "test": "yarn jest --runInBand --detectOpenHandles",
    "test-ci": "yarn jest src/__tests__ --runInBand --detectOpenHandles",
    "test-ci:silent": "yarn test-ci --silent",
    "lint": "eslint --ext .js,.ts,.tsx,.jsx src",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"**/*\"",
    "migration:run": "cross-env ts-node ./src/bin/migrator.ts migrate",
    "migration:revert": "cross-env ts-node ./src/bin/migrator.ts revert",
    "test:migration:run": "NODE_ENV=test yarn migration:run",
    "test:migration:revert": "NODE_ENV=test yarn migration:revert",
    "automigrate": "cross-env md5sum -c .migrations.${NODE_ENV:-dev}.md5 2>/dev/null || yarn migration:run && md5sum src/bin/migrator.ts src/migration/* > .migrations.${NODE_ENV:-dev}.md5",
    "setup": "yarn automigrate"
  },
  "main": "src/index.ts",
  "dependencies": {
    "argon2": "^0.24.1",
    "class-validator": "^0.11.0",
    "cookie-session": "^1.3.3",
    "express": "^4.16.4",
    "express-winston": "^3.4.0",
    "helmet": "^3.20.0",
    "jayson": "^3.1.2",
    "js-sha256": "^0.9.0",
    "jsonapi-serializer": "^3.6.4",
    "local-storage-fallback": "^4.1.1",
    "mime-types": "^2.1.24",
    "pg": "^7.8.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.0.3",
    "typeorm": "^0.2.15",
    "winston": "^3.2.1",
    "ws": "^7.2.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@chainlink/eslint-config": "0.0.3",
    "@chainlink/prettier-config": "0.0.2",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-session": "^2.0.37",
    "@types/express": "^4.16.1",
    "@types/express-winston": "^3.0.1",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.18",
    "@types/jsonapi-serializer": "^3.6.1",
    "@types/material-ui": "^0.21.6",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^11.11.3",
    "@types/node-fetch": "^2.5.0",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "@types/yargs": "^13.0.3",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "depcheck": "^0.8.3",
    "eslint": "^6.3.0",
    "http-status-codes": "^1.3.2",
    "jest": "^24.7.0",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.6.3"
  },
  "prettier": "@chainlink/prettier-config"
}
