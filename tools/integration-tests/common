#!/bin/bash

assert () {
  sleepCount=0
  while [ "$sleepCount" -le "30" ] && output=`eval $2`; do
    if [ "$output" == "$3" ]; then
      printf -- "\033[32mTest passed!\033[0m $1: got expected value $3.\n"
      return
    fi
    sleepCount=$((sleepCount+1))
    sleep 1
  done
  printf -- "\033[31mTEST FAILED!\033[0m $1: expected $3, actual $output; while evaluating '$2'.\n"
  exit 1
}

waitFor () {
  [ -z "$2" ] && timeout=60 || timeout=$2
  sleepCount=0
  while [ "$sleepCount" -le "$timeout" ] && ! eval "$1" >/dev/null; do
      sleep 1
      sleepCount=$((sleepCount+1))
  done

  if [ "$sleepCount" -gt "$timeout" ]; then
    printf -- "\033[31mTimed out waiting for '$1' (waited ${timeout}s).\033[0m\n"
    exit 1
  fi
}

waitForResponse () {
  title "Waiting for $1."
  waitFor "curl -s \"$1\""
  title "Service on $1 is ready."
}

get_ethnet_version() {
  go get github.com/pelletier/go-toml/cmd/tomljson
  tomljson Gopkg.lock | jq -r '.projects | .[] | select(.name | contains("go-ethereum")) | .version'
}

install_gethnet() {
  if [ -x "$(which geth)" ]; then
    return
  fi

  title "Retrieving geth version..."
  ethversion=$(get_ethnet_version)

  ethpkg=github.com/ethereum/go-ethereum
  ethpath=$GOPATH/src/$ethpkg

  title "Installing geth $ethversion..."
  if [ -d "$ethpath" ]; then
    pushd "$ethpath" >/dev/null
    git checkout master &>/dev/null
    go get -d -u $ethpkg
  else
    go get -d $ethpkg
    pushd "$ethpath" >/dev/null
  fi
  git checkout $ethversion 2>/dev/null
  popd >/dev/null
  go install $ethpkg/cmd/geth
}

launch_gethnet() {
  printf -- "\033[34m%-50s\033[0m" "Checking for running ethereum node"
  if curl -s $ETH_HTTP_URL >/dev/null; then
    printf -- "[\033[32mrunning\033[0m]\n"
    return
  fi
  printf -- "[\033[31mstopped\033[0m]\n"

  install_gethnet

  title "Starting geth..."
  $SRCROOT/tools/bin/gethnet &>$SRCROOT/tools/integration-tests/gethnet.log &
  waitForResponse $ETH_HTTP_URL
  title "Geth is running."
}

launch_parity() {
  printf -- "\033[34m%-50s\033[0m" "Checking for running ethereum node"
  if curl -s $ETH_HTTP_URL >/dev/null; then
    printf -- "[\033[32mrunning\033[0m]\n"
    return
  fi
  printf -- "[\033[31mstopped\033[0m]\n"

  title "Starting parity..."
  $SRCROOT/tools/bin/devnet &>$SRCROOT/tools/integration-tests/devnet.log &
  waitForResponse $ETH_HTTP_URL
  title "Parity is running."
}

install_chainlink() {
  if [ -x "$(which chainlink)" ]; then
    return
  fi

  title "Making chainlink..."
  make install &>$SRCROOT/tools/integration-tests/make.log
}

launch_chainlink() {
  chainlink_url="http://127.0.0.1:6688"
  printf -- "\033[34m%-50s\033[0m" "Checking for local chainlink"
  if curl -s $chainlink_url >/dev/null; then
    printf -- "[\033[32mrunning\033[0m]\n"
    return
  fi
  printf -- "[\033[31mstopped\033[0m]\n"

  install_chainlink

  title "Starting chainlink..."

  clroot=$(mktemp -d)
  trap "rm -rf $clroot" EXIT HUP TERM INT
  cp $SRCROOT/tools/clroot/{password.txt,apicredentials} $clroot/
  echo running chainlink from ${clroot}
  chainlink local node -d -p $clroot/password.txt -a $clroot/apicredentials &>$SRCROOT/tools/integration-tests/chainlink.log &

  waitForResponse $chainlink_url
  title "Chainlink is running."

  waitFor "grep 'Unlocked account' '$SRCROOT/tools/integration-tests/chainlink.log'" 10
  cl_node_address=`cat $SRCROOT/tools/integration-tests/chainlink.log | grep 'Unlocked account' | awk '{print$5}'`
  $SRCROOT/solidity/bin/fund_address "$cl_node_address" > $SRCROOT/tools/integration-tests/fund_address.log
}

deploy_oracle_and_linktoken_contracts() {
  title "Migrating core contracts..."
  pushd tools/integration-tests >/dev/null

  yarn --no-progress install &>$SRCROOT/tools/integration-tests/yarn.log
  ./deploy_contracts $cl_node_address | tee $SRCROOT/tools/integration-tests/deploy.log
  export ORACLE_CONTRACT_ADDRESS=`cat $SRCROOT/tools/integration-tests/deploy.log | grep Oracle | awk '{print$4}'`
  export LINK_TOKEN_ADDRESS=`cat $SRCROOT/tools/integration-tests/deploy.log | grep LinkToken | awk '{print$4}'`

  popd >/dev/null
  title "Migration complete."
}

launch_echo_server() {
  printf -- "\033[34m%-50s\033[0m" "Checking for local echo server"
  if curl -s $ECHO_SERVER_URL >/dev/null; then
    printf -- "[\033[32mrunning\033[0m]\n"
    return
  fi
  printf -- "[\033[31mstopped\033[0m]\n"

  title "Starting echo server..."
  pushd tools/integration-tests >/dev/null

  ./echo_server "$ECHO_SERVER_PORT" &>$SRCROOT/tools/integration-tests/echo-server.log &
  waitForResponse $ECHO_SERVER_URL

  popd >/dev/null
  title "Echo server is running."
}

print_logs() {
  for log in $(find "$SRCROOT/tools/integration-tests" -maxdepth 1 -type f -iname '*.log'); do
    heading "$log"
    cat $log
  done
}

exit_handler() {
  errno=$?
  # Print all the logs if the test fails
  if [ $errno -ne 0 ]; then
    title "ABORTING TEST"
    printf -- "Exited with code $errno\n"
    print_logs
  fi
  exit $errno
}

cleanup() {
  if [ -n "$CIRCLECI" ]; then
    return
  fi

  # Kill all child subprocesses
  pkill -P $$
}

title() {
  printf -- "\033[34m$1\033[0m\n"
}

heading() {
  printf -- "\n--------------------------------------------------------------------------------\n"
  title "$1"
  printf -- "--------------------------------------------------------------------------------\n\n"
}
