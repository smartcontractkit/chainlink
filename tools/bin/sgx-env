#!/bin/bash -e

workdir="/chainlink"
image_tag=`cat tools/docker/chainlink-sgx.Dockerfile | grep FROM | grep builder | awk '{print$2}'`
docker run \
  --volume "$PWD:$workdir" \
  --workdir="$workdir" \
  --env "SGX_ENABLED=yes" \
  --env "RUST_BACKTRACE=1" \
  --cap-add=SYS_PTRACE \
  -ti $image_tag
