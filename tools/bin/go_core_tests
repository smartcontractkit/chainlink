#!/usr/bin/env bash
set -o pipefail
set +e

go test -v -p 4 -parallel 4 ./... | tee ./output.txt
EXITCODE=$?
grep "\-\-\- FAIL" output.txt
grep "FAIL	" output.txt
grep "driver: bad connection" output.txt
echo "Exit code: $EXITCODE"
if [[ $EXITCODE == 1 ]]; then
  echo "Encountered test failures."
  exit 1
else
  echo "All tests passed!"
  exit 0
fi
