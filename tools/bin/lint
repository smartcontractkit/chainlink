#!/usr/bin/env bash

set -euo pipefail

cd "$(dirname "$0")"/../../core

echo "go vet"
go vet ./...
echo "shadow"
shadow ./...
echo "goimports"
goimports -d ./
echo "staticcheck"
staticcheck ./...
echo "errcheck"
errcheck -ignoretests -asserts -ignoregenerated ./...
echo "gosec"
gosec -exclude=G101,G104,G204,G304 -./...
echo "revive"
revive -config ../revive.toml -formatter friendly ./...
